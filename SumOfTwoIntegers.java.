public class SumOfTwoIntegers {
    public int getSum(int a, int b) {
        // Пока нет переноса, продолжаем выполнять операцию
        while (b != 0) {
            // a & b - это побитовый AND, который определяет, где будет перенос
            int carry = a & b;
            
            // a ^ b - это побитовый XOR, который выполняет сложение без учета переноса
            a = a ^ b;
            
